<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="baseAction" class="com.sohu.tv.memcloud.memdns.action.BaseAction"
		abstract="true">
		<property name="restResultsHandler" ref="restResultsHandler" />
	</bean>

	<bean name="baseInterceptor"
		class="com.sohu.tv.memcloud.memdns.interceptor.BaseInterceptor"
		abstract="true">
		<property name="restResultsHandler" ref="restResultsHandler" />
	</bean>

	<bean name="restExceptionHandlerAction" scope="prototype"
		class="io.downgoon.jresty.rest.struts2.action.RestExceptionHandlerAction">
		<property name="defaultExtension" value="json" />
		<property name="restResultsHandler" ref="restResultsHandler" />
	</bean>

	<bean name="pingAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.PingAction" parent="baseAction">
	</bean>
	

	<bean name="userAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.UserAction" parent="baseAction">
	</bean>
	<bean name="sessionAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.SessionAction" parent="baseAction">
	</bean>

	<bean name="appAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.AppAction" parent="baseAction">
	</bean>
	<bean name="shardAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.ShardAction" parent="baseAction">
	</bean>
	<bean name="groupAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.GroupAction" parent="baseAction">
	</bean>

	<bean name="dnsAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.DNSAction" parent="baseAction">
	</bean>
	<bean name="memAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.MemAction" parent="baseAction">
	</bean>
	<bean name="scaleAction" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.action.ScaleAction" parent="baseAction">
	</bean>



	<bean name="baseAuthInterceptor" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.interceptor.BaseAuthInterceptor"
		parent="baseInterceptor">
		<property name="baseauthlist" value="dynamic/acl.adminlist" />
	</bean>

	<bean name="loginAuthInterceptor" scope="prototype"
		class="com.sohu.tv.memcloud.memdns.interceptor.LoginedAuthInterceptor"
		parent="baseInterceptor">
		<property name="httpTracker" ref="httpTracker" />
	</bean>

	<bean name="httpTracker" class="com.sohu.tv.utils.session.CookieHttpTracker" />

	<bean name="statAction" scope="prototype"
		class="com.sohu.tv.memcloud.stats.action.StatAction" parent="baseAction">
	</bean>
	

</beans>